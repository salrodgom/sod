#!/usr/bin/gnuplot
nGeO2 = -121.812200998519
nSiO2 = -128.799143746482
N = 12.0
set yrange [0:30]
set xrange [0:1]
p '< sort -gk1 sod_boltzmann_exact.txt' u ($1/N):(96.48533212331*($4-$1*nGeO2-(N-$1)*nSiO2)/N):(3*$8*96.48533212331/N) w yerrorbars pt 7 ps 1 lc rgb 'red' notitle,\
  '' u ($1/N):(96.48533212331*($5-$1*nGeO2-(N-$1)*nSiO2)/N):(3*$9*96.48533212331/N) w yerrorbars pt 7 lc rgb 'blue' notitle,\
  '< sort -gk1 FREE' u ($1/N):(96.48533212331*($2-$1*nGeO2-(N-$1)*nSiO2)/N) w lp pt 6 lc rgb 'grey' notitle
#    EOF
